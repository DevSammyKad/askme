generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model UnansweredQuery {
  id            String   @id @default(uuid()) // Unique ID for each log
  query         String // The actual user query
  userId        String? // User id (optionalâ€”can be 'anonymous')
  searchResults Int // Number of Pinecone results returned
  maxScore      Float // Highest similarity score from Pinecone
  createdAt     DateTime @default(now()) // Timestamp
}

model Conversation {
  id        String   @id @default(cuid())
  userId    String
  title     String?
  messages  Json[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
